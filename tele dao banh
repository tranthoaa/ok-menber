-- ===== ƒê·ª¢I GAME LOAD =====
if not game:IsLoaded() then
    game.Loaded:Wait()
end

-- ===== CH·ªú 20 GI√ÇY SAU LOAD SCRIPT =====
task.wait(20)
print("‚è≥ 20 gi√¢y ƒë√£ tr√¥i qua, b·∫Øt ƒë·∫ßu bay...")

-- ===== SERVICES =====
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local plr = Players.LocalPlayer
local char = plr.Character or plr.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- ===== T·ªåA ƒê·ªò M·ª§C TI√äU =====
local TARGET_POS = Vector3.new(-729.8056, 381.5751, -10993.8125)
local ARRIVE_DISTANCE = 50 -- kho·∫£ng c√°ch t·ªëi thi·ªÉu ƒë·ªÉ kh√¥ng bay

-- ===== CHECK KHO·∫¢NG C√ÅCH =====
local distance = (hrp.Position - TARGET_POS).Magnitude
if distance <= ARRIVE_DISTANCE then
    print("üìç ƒê√£ ·ªü g·∫ßn m·ª•c ti√™u ‚Üí kh√¥ng bay")
    return
end

print("üõ´ Kho·∫£ng c√°ch t·ªõi m·ª•c ti√™u:", math.floor(distance))

-- ===== GI·∫¢M LAG TR∆Ø·ªöC KHI BAY =====
for _, v in pairs(char:GetDescendants()) do
    if v:IsA("BasePart") then
        v.CanCollide = false
        v.Anchored = false
        v.Transparency = 1
    end
end

-- ===== BAY 1 L·∫¶N =====
local speed = 320
local time = distance / speed

local tween = TweenService:Create(
    hrp,
    TweenInfo.new(time, Enum.EasingStyle.Linear),
    {CFrame = CFrame.new(TARGET_POS)}
)

tween:Play()
tween.Completed:Wait()

-- ===== ƒê·∫æN N∆†I =====
print("üõë ƒê√£ t·ªõi m·ª•c ti√™u")

-- ===== KH√îI PH·ª§C NH√ÇN V·∫¨T =====
for _, v in pairs(char:GetDescendants()) do
    if v:IsA("BasePart") then
        v.Transparency = 0
        v.CanCollide = true
        v.Anchored = false
    end
end

print("‚úÖ Bay ho√†n t·∫•t")
